export default async function handler(req, res) {
  try {
    // External API call
    const response = await fetch("https://danger-info-alpha.vercel.app/accinfo?uid=8080519000&key=DANGERxINFO");
    const data = await response.json();

    // Apni API ka response
    res.status(200).json({
      success: true,
      message: "ZFF Info API working üöÄ",
      owner: "Suraj bhai",
      externalData: data  // yaha external API ka data aayega
    });
  } catch (error) {
    res.status(500).json({
      success: false,
      message: "‚ùå Error fetching external API",
      error: error.message
    });
  }
}